{
  "name": "zzap",
  "version": "1.0.0",
  "description": "The modern incarnation of Zzap.it",
  "main": "index.js",
  "license": "MIT",
  "author": {
    "name": "Antonio Bianchetti",
    "email": "abianchetti@yahoo.com",
    "url": "https://twitter.com/seuck"
  },
  "scripts": {
    "start": "gulp",
    "validate": "gulp lint",
    "dev": "cross-env NODE_ENV=development webpack",
    "build": "cross-env NODE_ENV=production webpack --progress --hide-modules"
  },
  "paths": {
    "src": "./src"
  },
  "dependencies": {
    "axios": "^0.16.2",
    "jquery": "^3.2.1",
    "jquery-lazyload": "^1.9.7",
    "vue": "^2.3.3"
  },
  "devDependencies": {
    "babel-core": "^6.24.1",
    "babel-loader": "^7.0.0",
    "babel-preset-env": "^1.4.0",
    "babel-preset-es2015": "^6.24.1",
    "babel-register": "^6.24.1",
    "cross-env": "^5.0.0",
    "css-loader": "^0.25.0",
    "del": "^2.2.2",
    "eslint": "^3.12.2",
    "eslint-config-airbnb-base": "^11.2.0",
    "eslint-plugin-import": "^2.2.0",
    "eslint-plugin-scanjs-rules": "^0.1.5",
    "file-loader": "^0.9.0",
    "gulp": "^3.9.1",
    "gulp-babel": "^6.1.2",
    "gulp-eslint": "^3.0.1",
    "gulp-sass": "^3.1.0",
    "vue-loader": "^12.0.4",
    "vue-template-compiler": "^2.3.3",
    "webpack": "^2.4.1",
    "webpack-stream": "^3.2.0"
  },
  "babel": {
    "presets": [
      "es2015"
    ]
  },
  "eslintConfig": {
    "root": true,
    "extends": "airbnb-base",
    "plugin": [
      "scanjs-rules",
      "import"
    ],
    "env": {
      "jest": true,
      "browser": true
    },
    "rules": {
      "no-param-reassign": [
        "error",
        {
          "props": false
        }
      ],
      "no-underscore-dangle": "off",
      "no-plusplus": "off",
      "comma-dangle": [
        "error",
        "never"
      ],
      "global-require": "off",
      "import/extensions": "off",
      "import/prefer-default-export": "off",
      "import/no-extraneous-dependencies": "off",
      "import/no-unresolved": "off",
      "semi": [
        "error",
        "never"
      ],
      "func-names": "off"
    }
  }
}
